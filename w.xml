						<Anchors>
							<Anchor point="LEFT">
								<Offset>
									<AbsDimension x="210" y="-3"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>

							</OnLoad>
							<OnClick>
								WAddon.Watching.useComputerName();
							</OnClick>
							<OnEnter>
								GameTooltip:SetOwner(self, "ANCHOR_NONE");
								GameTooltip:SetPoint("BOTTOMRIGHT", "UIParent", "BOTTOMRIGHT", -CONTAINER_OFFSET_X - 13,
