                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="-30" y="-3"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <EditBox name="$parent_ComputerName" inherits="WAddon_Watching_Uneditable">
                        <Size>
